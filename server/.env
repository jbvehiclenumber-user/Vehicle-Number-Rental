# .env 파일 (실제 사용)
# .env.example (Git에 올릴 샘플)

# ============================================
# 서버 설정
# ============================================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# ============================================
# 데이터베이스 (PostgreSQL)
# ============================================
# 로컬 개발용
DATABASE_URL="postgresql://username:password@localhost:5432/transport_numbers?schema=public"

# 또는 무료 호스팅 (Railway, Supabase 등)
# DATABASE_URL="postgresql://..."

# ============================================
# JWT 인증
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ============================================
# 사업자등록번호 인증 API
# ============================================
# 국세청 API (https://www.data.go.kr/)
BUSINESS_API_KEY=your-api-key-here
BUSINESS_API_URL=https://api.odcloud.kr/api/nts-businessman/v1/status

# ============================================
# 본인인증 (PASS, 카카오 등)
# ============================================
# PASS 인증
PASS_CLIENT_ID=your-pass-client-id
PASS_CLIENT_SECRET=your-pass-client-secret

# 카카오 인증
KAKAO_REST_API_KEY=your-kakao-rest-api-key

# ============================================
# 결제 (토스페이먼츠)
# ============================================
TOSS_CLIENT_KEY=test_ck_ABC123...
TOSS_SECRET_KEY=test_sk_XYZ789...
TOSS_SUCCESS_URL=http://localhost:3000/payment/success
TOSS_FAIL_URL=http://localhost:3000/payment/fail

# ============================================
# 파일 업로드
# ============================================
MAX_FILE_SIZE=5242880  # 5MB
UPLOAD_DIR=./uploads
